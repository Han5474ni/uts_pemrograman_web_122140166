{
  "compilerOptions": {
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "target": "ES6",
    "skipLibCheck": true,
    "strict": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "plugins": [
      {
        "name": "next"
      }
    ],
    "paths": {
      "@/*": ["./*"]
    }
  },
  "include": ["next-env.d.ts", "**/*.ts", "**/*.tsx", ".next/types/**/*.ts", "app/privacy-policy/page.jsx", "lib/api.js", "lib/data.js", "lib/db.ts", "lib/utils.ts", "app/search/loading.tsx", "hooks/use-toast.js", "app/news/[id]/page.jsx", "components/footer.tsx", "app/search/page.tsx"],
  "exclude": ["node_modules"]
}
